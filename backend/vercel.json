{
  "crons": [
    {
      "path": "/api/cron/refresh-tokens?secret=YOUR_REFRESH_SECRET",
      "schedule": "0 * * * *"
    }
  ],

  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next" 
    },
    { 
      "src": "backend/index.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
